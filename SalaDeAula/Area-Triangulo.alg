Algoritmo "AreaTriangulo"
Var
   altura, base, barea :  real
Inicio
  Escreval("Calculador área do triângulo")
  Escreval("")
  Escreva("Digite a base do triângulo: ")
  Leia (base)
  Escreva("Digite a altura do triângulo: ")
  Leia (altura)
  area <- (base * altura) / 2
  Escreva("Área do triângulo: ", area)
Fimalgoritmo
